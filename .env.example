# API Keys
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here_optional
NANONETS_API_KEY=your_nanonets_api_key_here_optional

# Tesseract OCR (Windows - update path as needed)
TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe

# Database
CHROMADB_PATH=./data/chromadb

# Application Settings
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# Model Settings
DEFAULT_PARSER_MODEL=llama-3.1-8b-instant
DEFAULT_GENERATOR_MODEL=llama-3.3-70b-versatile
DEFAULT_TEMPERATURE=0.7
MAX_TOKENS=2048

# Processing Settings
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,png,jpg,jpeg
OCR_ENGINE=tesseract  # Options: tesseract, nanonets

# Generation Settings
MIN_QUESTIONS_PER_SET=15
MAX_QUESTIONS_PER_SET=50
DEFAULT_TOTAL_MARKS=100
NOVELTY_THRESHOLD=0.85

# Storage Paths
SYLLABI_PATH=./data/syllabi
PAST_PAPERS_PATH=./data/past_papers
GENERATED_PAPERS_PATH=./data/generated_papers
MODELS_PATH=./models
